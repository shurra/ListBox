{
  "name": "listbox",
  "version": "1.0.0",
  "description": "Create playlist for DMT AirBox(ListBox)",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "package-mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=assets/icons/mac/icon.icns --prune=true --out=release-builds",
    "package-win": "electron-packager . --overwrite --asar.unpackDir=ffmpeg --platform=win32 --arch=ia32 --icon=assets/icon/win/icon.ico --prune=true --out=release-builds",
    "package-linux": "electron-packager . casparcgclient --overwrite --asar=true --platform=linux --arch=x64 --icon=assets/icons/png/1024x1024.png --prune=true --out=release-builds",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Roman Shkromyda",
  "license": "MIT",
  "devDependencies": {
    "electron": "^9.4.0",
    "electron-packager": "^13.1.1"
  },
  "dependencies": {
    "bluebird": "^3.5.5",
    "electron-default-menu": "^1.0.1",
    "electron-prompt": "^1.3.1",
    "electron-store": "^3.2.0",
    "execa": "^1.0.0",
    "file-type": "^11.1.0",
    "iconv-lite": "^0.4.24",
    "lodash": "^4.17.11",
    "mousetrap": "^1.6.3",
    "read-chunk": "^3.2.0",
    "selectable.js": "^0.17.2",
    "sortablejs": "^1.9.0"
  }
}
